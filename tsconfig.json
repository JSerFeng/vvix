{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react-jsx",
    "jsxImportSource": "./lib/vdom",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "./lib",
    "./index.ts",
  ]
}
